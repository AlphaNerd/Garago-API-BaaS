  },
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "clean": "find test -type f ! -name '*.json' ! -name '*.js' ! -name '.eslintrc' -delete && rm *.log",
    "lint": "eslint lib/ test/",
    "prepush": "npm test",
    "commitmsg": "validate-commit-msg",
    "posttest": "npm run clean",
    "pretest": "eslint lib/**/*",
    "test": "tap 'test/tap/**/*.js'",
    "coverage": "tap 'test/tap/**/*.js' --cov",
    "codecov": "tap 'test/tap/**/*.js' --cov --coverage-report=lcov && codecov"
  },
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "dependencies": {
    "date-format": "^1.1.0",
    "debug": "^2.6.8",
    "semver": "^5.3.0",
    "streamroller": "^0.6.0",
    "hipchat-notifier": "^1.1.0",
    "loggly": "^1.1.0",
    "mailgun-js": "^0.7.0",
    "nodemailer": "^2.5.0",
    "redis": "^2.7.1",
    "slack-node": "~0.2.0",
    "axios": "^0.15.3"
  },
  "devDependencies": {
    "codecov": "^1.0.1",
    "conventional-changelog": "^1.1.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-import-resolver-node": "^0.3.1",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.12.0",
    "nyc": "^10.3.2",
    "sandboxed-module": "^2.0.3",
    "tap": "^8.0.1",
    "validate-commit-msg": "^2.12.2"
  },
  "optionalDependencies": {
    "hipchat-notifier": "^1.1.0",
    "loggly": "^1.1.0",
    "mailgun-js": "^0.7.0",
    "nodemailer": "^2.5.0",
    "redis": "^2.7.1",
    "slack-node": "~0.2.0",
    "axios": "^0.15.3"
  },
  "browser": {
    "os": false
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "require": [
      "./test/sandbox-coverage"
    ]
  },
